@page
@model FarmingApp.Pages.ClimateByState
@{
    ViewData["Title"] = "Climate Predictions by State";
}

<h1>Climate Predictions by State</h1>

<form method="get">
    <label for="state">Enter State Abbreviation;</label>
    <input type="text" id="state" name="state" required />
    <button type="submit">Search</button>
</form>

@if (Model.ClimatePredictions != null && Model.Climate Predictions.Count > 0)
{
    <h2> Climate Predictions for @Model.ClimatePredictions[0].State;</h2>
    <ul>
        @foreach (var prediction in Model.ClimatePredictions)
        {
            <li>@prediction.Address, @prediction.City, @prediction.Zip - Temperature: @prediction.Temperature, Rainfall: @prediction.Rainfall, Date: @prediction.Date</li>
        }
    </ul>
}

